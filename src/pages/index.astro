---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import HeroSection from "../components/HeroSection.astro";
import ModelXY from "../components/ModelXY.astro";
import ModelY from "../components/ModelY.astro";
import Model3 from "../components/Model3.astro";
import Cybertruck from "../components/Cybertruck.astro";
---

<Layout title="Tesla Clone">
  <Header />

  <main class="snap-y snap-mandatory relative w-full h-screen overflow-auto">
    <div class="snap-center"><HeroSection /></div>
    <div class="snap-center"><ModelXY /></div>
    <div class="snap-center"><ModelY /></div>
    <div class="snap-center"><Model3 /></div>
    <div class="snap-center"><Cybertruck /></div>
  </main>
</Layout>
